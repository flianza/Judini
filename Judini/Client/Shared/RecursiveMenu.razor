@using Judini.Client.Modelos.Menu

@foreach (var item in this.Items)
{
    @if (!item.Hijos.Any())
    {
        <MudNavLink Href="@item.Ruta" Match="@item.Match" Icon="@item.Icono">@item.Nombre</MudNavLink>
    }
    else
    {
        if (item.EsSeccion)
        {
            <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">@item.Nombre</MudText>
            <RecursiveMenu Items="item.Hijos"></RecursiveMenu>
        }
        else
        {
            <MudNavGroup Title="@item.Nombre" Icon="@item.Icono">
                <RecursiveMenu Items="item.Hijos"></RecursiveMenu>
            </MudNavGroup>
        }
    }
}

@code {
    [Parameter]
    public IEnumerable<Item> Items { get; set; }
}
