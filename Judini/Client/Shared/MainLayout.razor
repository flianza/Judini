@inherits LayoutComponentBase

@using Judini.Client.Infraestructura
@using Judini.Client.Temas
@using Judini.Client.Servicios

@inject NavigationManager navigationManager
@inject IdentityAuthenticationStateProvider authStateProvider
@inject IMenuService menuService
@inject ILogger<MainLayout> logger

<MudThemeProvider Theme="this.tema" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => this.ToggleMenu())" />
        <MudAppBarSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.PowerSettingsNew" Color="Color.Inherit" Edge="Edge.End" OnClick="@(() => this.CerrarSesion())" />
    </MudAppBar>
    <MudDrawer @bind-Open="menuAbierto" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Judini</MudText>
        </MudDrawerHeader>
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
            <MudHidden Breakpoint="Breakpoint.SmAndDown">
                <MudToolBar DisableGutters="true">
                    <MudBreadcrumbs Items="this.items"></MudBreadcrumbs>
                </MudToolBar>
            </MudHidden>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<style>
    .mud-breadcrumbs {
        padding: 16px 0px;
    }
</style>

@code {
    bool menuAbierto = true;
    TemaJudini tema = new TemaJudini();
    List<BreadcrumbItem> items = new List<BreadcrumbItem>();

    protected override void OnInitialized()
    {
        this.navigationManager.LocationChanged += this.HandleLocationChanged;
    }

    private void HandleLocationChanged(object sender, LocationChangedEventArgs e)
    {
        this.ActualizarBreadcrumb();
    }

    private void ActualizarBreadcrumb()
    {
        var routeView = this.Body.Target as RouteView;

        if (routeView != null)
        {
            var paginaActual = routeView.RouteData.PageType;

            var menuItems = this.menuService.ObtenerCamino(paginaActual);

            this.items = menuItems.Select(i => new BreadcrumbItem(i.Nombre, i.Ruta, i == menuItems.Last())).ToList();

            this.StateHasChanged();
        }
    }

    void ToggleMenu()
    {
        this.menuAbierto = !this.menuAbierto;
    }

    async Task CerrarSesion()
    {
        await this.authStateProvider.CerrarSesion();

        this.navigationManager.NavigateTo("iniciar-sesion");
    }
}